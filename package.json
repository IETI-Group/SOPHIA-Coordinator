{
	"name": "sophia-coordinator",
	"version": "1.0.0",
	"description": "SOPHIA Coordinator Service - Routes requests to User and Course services",
	"type": "module",
	"main": "dist/index.js",
	"scripts": {
		"dev": "nodemon",
		"build": "tsc",
		"start": "node dist/index.js",
		"format": "pnpm exec biome format --write",
		"lint": "pnpm exec biome lint",
		"check": "pnpm exec biome check --write",
		"check:fix": "pnpm exec biome check --write",
		"test": "vitest",
		"test:run": "vitest --run",
		"coverage": "vitest --coverage",
		"coverage:run": "vitest --coverage --run",
		"doc": "typedoc --out docs ./src --entryPointStrategy expand",
		"test:db": "tsx scripts/test-db-connection.ts"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"packageManager": "pnpm@10.15.0",
	"dependencies": {
		"axios": "^1.7.9",
		"dotenv": "^16.4.7",
		"express": "^4.21.2",
		"express-validator": "^7.2.1",
		"morgan": "^1.10.0",
		"ollama": "^0.6.3"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.7",
		"@types/express": "^5.0.0",
		"@types/morgan": "^1.9.9",
		"@types/node": "^24.10.1",
		"@types/supertest": "^6.0.3",
		"@vitest/coverage-istanbul": "^4.0.13",
		"nodemon": "^3.1.11",
		"supertest": "^7.1.4",
		"ts-node": "^10.9.2",
		"tsx": "^4.19.2",
		"typedoc": "^0.28.14",
		"typescript": "^5.9.3",
		"vitest": "^4.0.13",
		"vitest-mock-extended": "^3.1.0"
	}
}
